function getCookie(b){for(var d,c=b+"=",e=document.cookie.split(";"),a=0;
a<e.length;
a++){for(d=e[a];
d.charAt(0)==" ";
){d=d.substring(1)
}if(d.indexOf(c)==0){return d.substring(c.length,d.length)
}}return""
};