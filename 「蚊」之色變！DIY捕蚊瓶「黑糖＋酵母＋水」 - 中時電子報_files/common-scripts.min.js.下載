function GetUrl_Cn(a){if(location.pathname.toLowerCase().substring(0,4)=="/cn/"&&a.toLowerCase().indexOf("/cn/")<0){if(a.substring(0,1)=="/"&&a.substring(0,2)!="//"){return"/cn"+a
}else{if(a.toLowerCase().indexOf("styletc.chinatimes.com")>-1||a.toLowerCase().indexOf("want-car.chinatimes.com")>-1){return a
}else{return a.replace("chinatimes.com/","chinatimes.com/cn/")
}}}else{return a
}}$(function(){var a=$(".article-function-bar"),b=a.find(".share-list");
